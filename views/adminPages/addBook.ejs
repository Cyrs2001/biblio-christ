                        <div class="form">
                            <textarea name="shortDescription" id="shortDescription" placeholder="short Description"
                                style="width: 100%;" maxlength="200" rows="5"></textarea>
                        </div>
                        <div class="form">
                            <textarea name="description" id="description" placeholder="Description" style="width: 100%;"
                                rows="5"></textarea>
                        </div>
                        <div class="form">
                            <input type="file" name="files" id="files" placeholder="Ajoutez le ficher pdf ici"
                                style="width: 100%;">
