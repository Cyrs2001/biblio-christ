                                <br><input type="checkbox" name="dieu" id="dieu"><label for="dieu">dieu</label>
                                <br><input type="checkbox" name="finance" id="finance"><label
                                    for="finance">finance</label>
                                <br><input type="checkbox" name="relation" id="relation"><label
                                    for="relation">relation</label>
                                <br><input type="checkbox" name="sante" id="sante"><label for="sante">sante</label>
                            </p>
                        </div>

                        <button type="submit" class="btn btn-primary  ">envoie <i
                                class="bi bi-cursor-fill"></i></button>
        </form>

    </div>



