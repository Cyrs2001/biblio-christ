<%- include('../pages/header') %>

<div class="text-center py-5">
<main class="form-signin py-5">
    <form action="/admin<%= action %>" method="POST">

      <h1 class="h3 mb-3 fw-normal pt-5"> <%= formTitle %></h1>
      
      <% if(locals.message && message.type === "succes"){ %>
        <div class="text-succes"> <%= message.content %> </div>
        <% } %>
      
      <% if(locals.message && message.type === "danger"){ %>
        <div class="text-danger"> <%= message.content %> </div>
      <% } %>
      <div class="form-group">
        <input type="email" class="form-control" name="email" placeholder="name@example.com">
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="Password">
      </div>
  
      <button class="w-100 btn btn-lg btn-primary" type="submit"><%= formTitle %></button>
      <% if(formTitle === "Connexion") {%>
      Pas encore menbre ?<a href="signup">inscription</a>
      <%} else { %> 
        Deja menbre?<a href="signin">Connexion</a>
      <% } %>

      <p class="mt-5 mb-3 text-muted">&copy; 2021 Biblio-Christ </p>
    </form>

  </main>
</div>
<%- include('../pages/footer') %>